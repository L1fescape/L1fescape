{
  "name": "l1fescape.com",
  "version": "0.0.1",
  "main": "web/index.tsx",
  "license": "MIT",
  "scripts": {
    "start": "yarn && yarn dev:web",
    "build": "yarn && yarn clean && yarn build:web",
    "build:web": "cross-env NODE_ENV=production webpack --config web/webpack.config.js",
    "dev": "yarn && yarn dev:web",
    "dev:web": "cross-env NODE_ENV=development webpack-dev-server --hot --inline --config web/webpack.config.js",
    "clean": "rimraf build/*",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "tools": "yarn tools:clean && yarn tools:firefox",
    "tools:clean": "rimraf tools/ && mkdir -p tools/",
    "tools:firefox": "wget -O tools/react-dev-tools.xpi https://addons.mozilla.org/firefox/downloads/file/3478747/react_developer_tools-4.4.0-fx.xpi"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "eslint": "^6.8.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.2.2",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-router-hash-link": "^1.2.2",
    "react-spring": "^8.0.27",
    "runes": "^0.4.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-router-hash-link": "^1.2.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/runes": "^0.4.1",
    "copy-webpack-plugin": "^5.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.4.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^l1(.*)$": "<rootDir>/src$1",
      "^web(.*)$": "<rootDir>/web$1",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
