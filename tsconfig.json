{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "l1": ["src"],
      "l1/*": ["src/*"],
      "web/*": ["web/*"]
    },
    "outDir": "build/web",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["web/index.tsx", "src/**/*"],
  "exclude": ["test.ts", "**/*.spec.ts"]
}
